<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_remote"
    android:screenOrientation="landscape"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.blackrice000.hoverboard.RemoteActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="Back"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:id="@+id/btn_Back_1"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:textSize="30sp" />

            <Button
                android:text="Front"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/btn_Front"
                android:layout_weight="1"
                style="@android:style/Widget.Holo.Button"
                android:textSize="30sp"
                android:textStyle="normal|bold" />

            <Button
                android:background="@android:color/transparent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/btn_Back_2"
                android:layout_weight="1"
                android:text="Back"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:text="Left"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/btn_Left"
                android:layout_weight="1"
                style="@android:style/Widget.Holo.Button"
                android:textSize="30sp"
                android:textStyle="normal|bold" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/btn_Stop"
                android:layout_weight="1"
                android:textSize="30sp"
                style="@android:style/Widget.Holo.Button"
                android:textStyle="normal|bold"
                android:text="Stop"
                android:textColor="@android:color/holo_red_dark" />

            <Button
                android:text="Right"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/btn_Right"
                android:layout_weight="1"
                android:textSize="30sp"
                style="@android:style/Widget.Holo.Button"
                android:textStyle="normal|bold" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/btn_speedup"
                android:layout_weight="1"
                style="@android:style/Widget.Holo.Button"
                android:text="Speed Up"
                android:textSize="30sp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/holo_green_light" />

            <Button
                android:text="Reverse"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/btn_Reverse"
                android:layout_weight="1"
                android:textSize="30sp"
                style="@android:style/Widget.Holo.Button"
                android:textStyle="normal|bold" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/btn_speeddown"
                android:layout_weight="1"
                android:text="Speed Down"
                style="@android:style/Widget.Holo.Button"
                android:textStyle="normal|bold"
                android:textSize="30sp"
                android:textColor="@android:color/holo_green_light" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
